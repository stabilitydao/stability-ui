{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "verbatimModuleSyntax": false,
    "jsxImportSource": "react",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@web3": ["src/web3"],
      "@layouts/*": ["src/layouts/*"],
      "@layouts": ["src/layouts/"],
      "@pages/*": ["src/pages/*"],
      "@store": ["src/store"],
      "@utils": ["src/utils"],
      "@constants": ["src/constants"],
      "@types": ["src/types"],
      "@modules": ["src/modules"],
      "@ui": ["src/ui"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    ".astro/content.d.ts",
    "vitest.config.ts",
    "playwright.config.ts"
  ]
}
